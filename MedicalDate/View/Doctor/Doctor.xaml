<Page
    x:Class="MedicalDate.View.Doctor.Doctor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MedicalDate.View.Doctor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utu="using:Uno.Toolkit.UI"
    Background="{ThemeResource Background}"
    mc:Ignorable="d">

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <utu:NavigationBar Background="{ThemeResource NavBackground}">
            <utu:NavigationBar.Content>
                <AutoSuggestBox
                    x:Name="txtsearch"
                    MinWidth="100"
                    MaxWidth="300"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    IsSuggestionListOpen="False"
                    PlaceholderText="Search"
                    SuggestionChosen="txtsearch_SuggestionChosen"
                    TextChanged="txtsearch_TextChanged">
                    <AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="0,0,5,0" Text="{Binding Name}" />
                        </DataTemplate>
                    </AutoSuggestBox.ItemTemplate>
                </AutoSuggestBox>
            </utu:NavigationBar.Content>
            <utu:NavigationBar.PrimaryCommands>
                <AppBarButton x:Name="btnopen" Icon="Add">
                    <AppBarButton.Flyout>
                        <Flyout>
                            <StackPanel Width="300">
                                <TextBlock Margin="0,0,0,5" Text="Nombre y apellido" />
                                <TextBox
                                    x:Name="txtname"
                                    Margin="0,0,0,5"
                                    PlaceholderText="Carlos suarez"
                                    Style="{StaticResource CupertinoTextBoxStyle}" />
                                <TextBlock Margin="0,0,0,5" Text="Especialidad" />
                                <TextBox
                                    x:Name="txtspecial"
                                    Margin="0,0,0,5"
                                    PlaceholderText="Cardiologo"
                                    Style="{StaticResource CupertinoTextBoxStyle}" />
                                <TextBlock Margin="0,0,0,5" Text="Telefono" />
                                <TextBox
                                    x:Name="txtphone"
                                    Margin="0,0,0,5"
                                    InputScope="TelephoneLocalNumber"
                                    PlaceholderText="+52 555-123-4567"
                                    Style="{StaticResource CupertinoTextBoxStyle}" />
                                <TextBlock Margin="0,0,0,5" Text="Correo Electronico" />
                                <TextBox
                                    x:Name="txtemail"
                                    Margin="0,0,0,5"
                                    PlaceholderText="carlos@gmail.com"
                                    Style="{StaticResource CupertinoTextBoxStyle}" />
                                <Button
                                    x:Name="btnadd"
                                    HorizontalAlignment="Center"
                                    Click="btnadd_Click"
                                    Content="Agregar"
                                    Style="{StaticResource CupertinoButtonStyle}" />
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </utu:NavigationBar.PrimaryCommands>
        </utu:NavigationBar>
        <ListView x:Name="list" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel.ContextFlyout>
                            <MenuBarItemFlyout>
                                <MenuFlyoutSubItem Icon="Send" Text="Compartir">
                                    <MenuFlyoutItem
                                        x:Name="btnshare"
                                        Click="btnshare_Click"
                                        Text="Whatsapp" />
                                    <MenuFlyoutItem
                                        x:Name="btnemail"
                                        Click="btnemail_Click"
                                        Text="Email" />
                                    <MenuFlyoutItem
                                        x:Name="btnsms"
                                        Click="btnsms_Click"
                                        Text="SMS" />
                                </MenuFlyoutSubItem>
                                <MenuFlyoutItem
                                    x:Name="btndelete"
                                    Click="btndelete_Click"
                                    Icon="Delete"
                                    Text="Eliminar" />
                                <MenuFlyoutItem
                                    x:Name="btnupdate"
                                    Click="btnupdate_Click"
                                    Text="Actualizar" />
                            </MenuBarItemFlyout>
                        </StackPanel.ContextFlyout>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
